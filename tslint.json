{
  "extends": "tslint:latest",
  "defaultSeverity": "warning",
  "rules": {
    "curly": true,
    "max-classes-per-file": false,
    "member-access": [
      true,
      "no-public"
    ],
    "max-line-length": [
      true,
      128
    ],
    "quotemark": [
      true,
      "single",
      "avoid-escape"
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "never",
        "singleline": "never"
      }
    ],
    "interface-name": false,
    "prefer-object-spread": false,
    "variable-name": false
  },
  "jsRules": {
    "curly": true
  },
  "rulesDirectory": [
  ]
}
